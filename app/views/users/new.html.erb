<div style="margin-top: 50px;">
  <form method="POST" action="<%= register_path %>" class="container" style="width: max-content; padding:40px; height:300px; background:#e9f7ef">
    <h1>SignUp</h1>
    <% token_tag %>
    <div class="form-group">
      <input type="email" name="username" id="username" class="form-control" placeholder="username">
    </div>
    <div class="form-group">
      <input type="password" name="userpassword" id="userpassword"  class="form-control" placeholder="userpassword">
    </div>
    <input type="submit" value="register" class="btn btn-info">
  </form>
</div>