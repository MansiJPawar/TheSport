<p id="notice"><%= notice %></p>

<!-- <h1>Sports</h1> -->
<!-- To verify if a user is signed in, use the following helper: -->
<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
  <thead  class="thead-dark">
    <tr>
      <th>Sport name</th>
      <th>Sport equipement</th>
      <th>Player count</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sports.each do |sport| %>
    <!-- shows sport added by the current user only   -->
    <% if sport.user == current_user %>
      
      <tr>
        <td><%= sport.sport_name %></td>
        <td><%= sport.sport_equipement %></td>
        <td><%= sport.player_count %></td>
        <td><%= sport.user_id %></td>
        <td><%= link_to 'Show', sport %></td>
        <!-- <% if sport.user == current_user%> -->
        <td><%= link_to 'Edit', edit_sport_path(sport) %></td>
        <td><%= link_to 'Destroy', sport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <!-- <% else %>
        <td></td>
        <td></td>
        <% end %> -->
      </tr>
      <% end %>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sport', new_sport_path , class:"btn btn-secondary"%>

<% else %>
  <h1>Welcome to Sports Campain</h1>
  <p>Get started by logging in...</p>
<% end %>